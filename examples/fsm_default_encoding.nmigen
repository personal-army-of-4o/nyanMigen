
from nmigen import *
from nmigen.cli import main

class fsm_default_encoding(Elaboratable):

    def main():
        top = fsm_default_encoding()
        main(top, name='fsm_default_encoding', ports=top.ports())

    def __init__(self):
        self.o = Signal()

    def ports(self):
        return [self.o]

    def inputs(self):
        return []

    def outputs(self):
        return [self.o]

    def elaborate(self, platform):
        m = Module()
        s = Signal(2, reset=1)
        o = self.o
        with m.Switch(s):
            with m.Case(1):
                m.d.comb += s.eq(2)
                m.d.comb += o.eq(1)
            with m.Case(2):
                m.d.comb += s.eq(1)
                m.d.comb += o.eq(0)
        return m

if __name__ == '__main__':
    fsm_default_encoding.main()
